[Desktop Entry]
_Name=Variety
_Comment=Variety Wallpaper Changer
Categories=GNOME;GTK;Utility;
Exec=variety %U
MimeType=text/uri-list;
Icon=/usr/share/variety/media/variety.svg
Terminal=false
Type=Application
StartupNotify=false
Actions=Next;Previous;PauseResume;History;Preferences

[Desktop Action Next]
Exec=/opt/extras.ubuntu.com/variety/bin/variety --next
_Name=Next
OnlyShowIn=Unity;

[Desktop Action Previous]
Exec=/opt/extras.ubuntu.com/variety/bin/variety --previous
_Name=Previous
OnlyShowIn=Unity;

[Desktop Action PauseResume]
Exec=/opt/extras.ubuntu.com/variety/bin/variety --toggle-pause
_Name=Pause / Resume
OnlyShowIn=Unity;

[Desktop Action History]
Exec=/opt/extras.ubuntu.com/variety/bin/variety --history
_Name=History
OnlyShowIn=Unity;

[Desktop Action Preferences]
Exec=/opt/extras.ubuntu.com/variety/bin/variety --preferences
_Name=Preferences
OnlyShowIn=Unity;
